{
  "name": "sunbird-ed-discussions-ui-v8",
  "version": "1.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "test:ci": "jest --silent --ci --w 2 --collectCoverage=true --coverageReporters=lcov",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copy:assets": "cp -r ./projects/discussion-ui/assets dist/discussion-ui/",
    "build-lib": "ng build && npm run copy:assets"
  },
  "dependencies": {
    "@angular/animations": "^12.2.17",
    "@angular/common": "^12.2.17",
    "@angular/compiler": "^12.2.17",
    "@angular/core": "^12.2.17",
    "@angular/forms": "^12.2.17",
    "@angular/platform-browser": "^12.2.17",
    "@angular/platform-browser-dynamic": "^12.2.17",
    "@angular/router": "^12.2.17",
    "copyfiles": "^2.4.1",
    "core-js": "^2.5.4",
    "dayjs": "^1.10.4",
    "ngx-chips": "2.2.0",
    "ngx-infinite-scroll": "^10.0.1",
    "rxjs": "~6.6.7",
    "tslib": "^2.7.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.18",
    "@angular-devkit/build-ng-packagr": "~0.1002.4",
    "@angular/cli": "^12.2.18",
    "@angular/compiler-cli": "^12.2.17",
    "@angular/language-service": "^12.2.17",
    "@project-sunbird/client-services": "^3.9.5",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^26.6.3",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lodash-es": "^4.17.20",
    "ng-packagr": "^12.2.7",
    "protractor": "~7.0.0",
    "ts-jest": "^26.5.4",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.3",
    "typescript": "^4.3.5"
  },
  "description": "Sunbird discussions ui library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sunbird-Ed/discussions-UI.git"
  },
  "keywords": [
    "sunbird",
    "discussion",
    "angular"
  ],
  "author": "Vinu Kumar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sunbird-Ed/discussions-UI/issues"
  },
  "homepage": "https://github.com/Sunbird-Ed/discussions-UI#readme",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/projects/discussion-ui/tsconfig.spec.json"
      }
    },
    "browser": false,
    "rootDir": "./",
    "roots": [
      "<rootDir>/projects/discussion-ui/src/"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [],
    "testMatch": [
      "**/?(*.)(spec).ts"
    ],
    "restoreMocks": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "json"
    ],
    "transformIgnorePatterns": []
  }
}